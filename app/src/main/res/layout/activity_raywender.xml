<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".skillbrain.SkillbrainActivity">

    <com.company.customview.skillbrain.custom.AvatarImageViewMask
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:src="@drawable/image"
        android:layout_gravity="center_horizontal"
        app:aiv_borderColor="@color/colorPrimary"
        app:aiv_borderWidth="10dp" />


    <com.company.customview.skillbrain.custom.AvatarImageViewShader
        android:layout_width="150dp"
        android:src="@drawable/image"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        app:aivs_borderWidth="10dp"
        app:aivs_borderColor="@color/colorPrimaryDark"/>
</LinearLayout>